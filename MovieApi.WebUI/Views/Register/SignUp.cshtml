@model CreateUserRegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Form-v5 by Colorlib</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="/colorlib-regform-31/css/roboto-font.css">
    <link rel="stylesheet" type="text/css" href="/colorlib-regform-31/fonts/font-awesome-5/css/fontawesome-all.min.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="/colorlib-regform-31/css/style.css"/>
</head>
<body class="form-v5">
<div class="page-content">
    <div class="form-v5-content">
        <form class="form-detail"  method="post">
            <h2>Movie Api Yeni Kullancı Kaydı</h2>
            <div class="form-row">
                <label for="full-name">Adınız</label>
                <input type="text" asp-for="Name" id="full-name" class="input-text" placeholder="Adınız..." required>
                <i class="fas fa-user"></i>
            </div>
            <div class="form-row">
                <label for="full-name">Soyadınız</label>
                <input type="text" asp-for="Surname" id="surnmae" class="input-text" placeholder="Soyadınız..." required>
                <i class="fas fa-user"></i>
            </div>
            <div class="form-row">
                <label for="full-name">Kullanıcı Adınız</label>
                <input type="text" asp-for="Username" id="username" class="input-text" placeholder="Kullanıcı Adınız..." required>
                <i class="fas fa-user"></i>
            </div>
            <div class="form-row">
                <label for="your-email">Email Adresiniz</label>
                <input type="text" asp-for="Email" id="your-email" class="input-text" placeholder="Email Adresiniz" required >
                <i class="fas fa-envelope"></i>
            </div>
            <div class="form-row">
                <label for="password">Şifreniz</label>
                <input type="password" asp-for="Password" id="password" class="input-text" placeholder="Şifreniz" required>
                <i class="fas fa-lock"></i>
            </div>
            <div class="form-row-last">
                <input type="submit"  class="register" value="Kayıt Oluştur">
            </div>
        </form>
    </div>
</div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>